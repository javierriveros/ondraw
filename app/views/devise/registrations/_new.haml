= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .dark-grey-text
        = devise_error_messages!
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.text_field :username, class: "mdl-textfield__input dark-grey-text", required: true
        = f.label :username, class: "mdl-textfield__label"
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.email_field :email, class: "mdl-textfield__input  dark-grey-text", required: true
        = f.label :email, class: "mdl-textfield__label"
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.password_field :password, class: "mdl-textfield__input  dark-grey-text"
        = f.label :password, class: "mdl-textfield__label"
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.password_field :password_confirmation, class: "mdl-textfield__input dark-grey-text"
        = f.label :password_confirmation, class: "mdl-textfield__label"
    .top-space
        .row.middle-xs
            = grid xs: 12, md: 6 do
                = f.submit "Registrar", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored"
